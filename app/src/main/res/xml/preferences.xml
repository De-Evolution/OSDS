<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="pref_gamepad_settings"
        android:title="@string/pref_gamepad_title" >

        <ListPreference
            android:key="@string/pref_gamepad_type_key"
            android:title="@string/pref_gamepad_type_title"
            android:summary="%s"
            android:defaultValue="@string/gamepad_default"
            android:dialogTitle="@string/pref_gamepad_type_title"
            android:entries="@array/pref_gamepad_type_entries"
            android:entryValues="@array/pref_gamepad_type_entries" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_appearance_settings"
        android:title="@string/pref_appearance_title" >

        <CheckBoxPreference
            android:key="@string/pref_animate_add_joystick_key"
            android:title="@string/pref_animate_add_joystick_title"
            android:summary="You know, those floating things at the bottom that tell you how to add a joystick"
            android:defaultValue="true"/>

        <CheckBoxPreference
            android:key="@string/pref_show_telemetry_keys_key"
            android:title="@string/pref_show_telemetry_keys_title"
            android:summary="@string/pref_show_telemetry_keys_description"
            android:defaultValue="false"/>

    </PreferenceCategory>

</PreferenceScreen>